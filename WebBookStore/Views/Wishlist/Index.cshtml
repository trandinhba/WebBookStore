@model IEnumerable<WebBookStore.Models.Wishlist>

@{
    ViewBag.Title = "Danh sách yêu thích";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4 text-primary fw-semibold">
                <i class="bi bi-heart-fill me-2"></i>Danh sách yêu thích của bạn
            </h2>
            
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="position-relative">
                                    @if (!string.IsNullOrEmpty(item.Book.ImageUrl))
                                    {
                                        <img src="@Url.Content(item.Book.ImageUrl)" class="card-img-top" alt="@item.Book.Title" style="height: 300px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                                            <i class="bi bi-book text-muted" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                    
                                    <!-- Remove from wishlist button -->
                                    <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2" 
                                            onclick="removeFromWishlist(@item.WishlistId)" 
                                            title="Xóa khỏi danh sách yêu thích">
                                        <i class="bi bi-heart-fill"></i>
                                    </button>
                                </div>
                                
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-truncate" title="@item.Book.Title">
                                        @item.Book.Title
                                    </h5>
                                    
                                    <p class="card-text text-muted small mb-2">
                                        <i class="bi bi-person me-1"></i>@item.Book.Author
                                    </p>
                                    
                                    @if (item.Book.Category != null)
                                    {
                                        <p class="card-text text-muted small mb-2">
                                            <i class="bi bi-tag me-1"></i>@item.Book.Category.CategoryName
                                        </p>
                                    }
                                    
                                    <!-- Rating -->
                                    <div class="mb-2">
                                        @{
                                            var rating = item.Book.AverageRating;
                                            var reviewCount = item.Book.ReviewCount;
                                        }
                                        <div class="d-flex align-items-center">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= rating)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else if (i - 0.5 <= rating)
                                                {
                                                    <i class="bi bi-star-half text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-muted"></i>
                                                }
                                            }
                                            <small class="text-muted ms-1">(@reviewCount)</small>
                                        </div>
                                    </div>
                                    
                                    <!-- Price -->
                                    <div class="mb-3">
                                        @if (item.Book.DiscountPrice.HasValue && item.Book.DiscountPrice < item.Book.Price)
                                        {
                                            <span class="text-decoration-line-through text-muted">@item.Book.Price.ToString("N0") ₫</span>
                                            <span class="text-danger fw-bold ms-2">@item.Book.DiscountPrice.Value.ToString("N0") ₫</span>
                                        }
                                        else
                                        {
                                            <span class="text-primary fw-bold">@item.Book.Price.ToString("N0") ₫</span>
                                        }
                                    </div>
                                    
                                    <!-- Stock status -->
                                    <div class="mb-3">
                                        @if (item.Book.StockQuantity > 0)
                                        {
                                            <span class="badge bg-success">Còn hàng</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Hết hàng</span>
                                        }
                                    </div>
                                    
                                    <!-- Action buttons -->
                                    <div class="mt-auto">
                                        <div class="d-grid gap-2">
                                            <a href="@Url.Action("Details", "Books", new { id = item.Book.BookId })" 
                                               class="btn btn-outline-primary">
                                                <i class="bi bi-eye me-1"></i>Xem chi tiết
                                            </a>
                                            
                                            @if (item.Book.StockQuantity > 0)
                                            {
                                                <button type="button" class="btn btn-primary" 
                                                        onclick="addToCart(@item.Book.BookId)">
                                                    <i class="bi bi-cart-plus me-1"></i>Thêm vào giỏ hàng
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-secondary" disabled>
                                                    <i class="bi bi-cart-x me-1"></i>Hết hàng
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card-footer bg-transparent">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>
                                        Thêm vào: @item.AddedDate.ToString("dd/MM/yyyy")
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- Empty wishlist -->
                <div class="text-center py-5">
                    <i class="bi bi-heart text-muted" style="font-size: 4rem;"></i>
                    <h4 class="text-muted mt-3">Danh sách yêu thích trống</h4>
                    <p class="text-muted">Bạn chưa có sản phẩm nào trong danh sách yêu thích.</p>
                    <a href="@Url.Action("Index", "Books")" class="btn btn-primary">
                        <i class="bi bi-book me-1"></i>Khám phá sách
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Success/Error Messages -->
<div id="messageContainer" class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
</div>

<script>
    // Add to cart function
    function addToCart(bookId) {
        $.ajax({
            url: '@Url.Action("AddToCart", "Cart")',
            type: 'POST',
            data: { bookId: bookId, quantity: 1 },
            success: function(response) {
                if (response.success) {
                    showMessage('Đã thêm vào giỏ hàng!', 'success');
                    updateCartCount();
                } else {
                    showMessage(response.message || 'Có lỗi xảy ra', 'error');
                }
            },
            error: function() {
                showMessage('Có lỗi xảy ra khi thêm vào giỏ hàng', 'error');
            }
        });
    }

    // Remove from wishlist function
    function removeFromWishlist(wishlistId) {
        if (confirm('Bạn có chắc muốn xóa sản phẩm này khỏi danh sách yêu thích?')) {
            $.ajax({
                url: '@Url.Action("Remove", "Wishlist")',
                type: 'POST',
                data: { wishlistId: wishlistId },
                success: function(response) {
                    if (response.success) {
                        showMessage('Đã xóa khỏi danh sách yêu thích!', 'success');
                        // Reload page to update the list
                        setTimeout(function() {
                            location.reload();
                        }, 1000);
                    } else {
                        showMessage(response.message || 'Có lỗi xảy ra', 'error');
                    }
                },
                error: function() {
                    showMessage('Có lỗi xảy ra khi xóa khỏi danh sách yêu thích', 'error');
                }
            });
        }
    }

    // Show message function
    function showMessage(message, type) {
        var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
        var icon = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';
        
        var messageHtml = `
            <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                <i class="bi ${icon} me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        
        $('#messageContainer').html(messageHtml);
        
        // Auto hide after 3 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 3000);
    }

    // Update cart count function
    function updateCartCount() {
        $.ajax({
            url: '@Url.Action("GetCartCount", "Cart")',
            type: 'GET',
            success: function(count) {
                $('#cartCount').text(count);
            }
        });
    }
</script>
