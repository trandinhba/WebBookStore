@model WebBookStore.Models.Order

@{
    ViewBag.Title = "Xác nhận đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Success Header -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <div class="success-icon mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <h1 class="text-success fw-bold mb-3">Đặt hàng thành công!</h1>
                <p class="text-muted fs-5">Cảm ơn bạn đã mua sắm tại Sach50. Đơn hàng của bạn đã được xử lý.</p>
            </div>
        </div>
    </div>

    <!-- Order Information -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-receipt me-2"></i>Thông tin đơn hàng</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">Mã đơn hàng</h6>
                            <p class="fw-bold text-primary fs-5">#@Model.Id</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">Ngày đặt hàng</h6>
                            <p class="fw-bold">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">Trạng thái</h6>
                            <span class="badge bg-warning fs-6">@Model.Status</span>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">Tổng tiền</h6>
                            <p class="fw-bold text-success fs-5">@Model.Total.ToString("N0") ₫</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Items -->
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-box me-2"></i>Sản phẩm đã đặt</h5>
                </div>
                <div class="card-body">
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <div class="d-flex align-items-center mb-3 p-3 border rounded">
                                <div class="flex-shrink-0 me-3">
                                    @if (!string.IsNullOrEmpty(item.Book.ImageUrl))
                                    {
                                        <img src="@Url.Content(item.Book.ImageUrl)" alt="@item.Book.Title" 
                                             style="width: 80px; height: 100px; object-fit: cover;" class="rounded">
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center rounded" 
                                             style="width: 80px; height: 100px;">
                                            <i class="bi bi-book text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@item.Book.Title</h6>
                                    <p class="text-muted small mb-1">@item.Book.Author</p>
                                    <p class="text-muted small mb-0">Số lượng: @item.Quantity</p>
                                </div>
                                <div class="flex-shrink-0 text-end">
                                    <p class="fw-bold mb-0">@item.TotalPrice.ToString("N0") ₫</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center">Không có sản phẩm nào trong đơn hàng.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Order Summary -->
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-calculator me-2"></i>Tóm tắt đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Thành tiền:</span>
                                <span>@Model.Subtotal.ToString("N0") ₫</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Phí vận chuyển:</span>
                                <span>22.000 ₫</span>
                            </div>
                            @if (Model.DiscountAmount > 0)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Giảm giá:</span>
                                    <span class="text-success">-@Model.DiscountAmount.ToString("N0") ₫</span>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <hr>
                            <div class="d-flex justify-content-between">
                                <strong>Tổng cộng:</strong>
                                <strong class="text-success fs-5">@Model.Total.ToString("N0") ₫</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Next Steps -->
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Bước tiếp theo</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="bi bi-envelope me-2"></i>Email xác nhận</h6>
                            <p class="text-muted small">Chúng tôi đã gửi email xác nhận đơn hàng đến địa chỉ email của bạn.</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="bi bi-truck me-2"></i>Theo dõi đơn hàng</h6>
                            <p class="text-muted small">Bạn có thể theo dõi trạng thái đơn hàng trong phần "Lịch sử đơn hàng".</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <h6><i class="bi bi-clock me-2"></i>Thời gian giao hàng</h6>
                            <p class="text-muted small">Dự kiến giao hàng trong 2-3 ngày làm việc.</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="bi bi-headset me-2"></i>Hỗ trợ khách hàng</h6>
                            <p class="text-muted small">Nếu có thắc mắc, vui lòng liên hệ hotline: 1900-xxxx</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row justify-content-center mt-5">
        <div class="col-lg-8 text-center">
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a href="@Url.Action("Index", "Books")" class="btn btn-outline-primary btn-lg me-md-2">
                    <i class="bi bi-book me-2"></i>Tiếp tục mua sắm
                </a>
                <a href="@Url.Action("History", "Order")" class="btn btn-primary btn-lg">
                    <i class="bi bi-clock-history me-2"></i>Xem lịch sử đơn hàng
                </a>
            </div>
        </div>
    </div>

    <!-- Thank You Message -->
    <div class="row justify-content-center mt-5">
        <div class="col-lg-8">
            <div class="text-center">
                <h4 class="text-primary mb-3">Cảm ơn bạn đã tin tưởng Sach50!</h4>
                <p class="text-muted">Chúng tôi cam kết mang đến những cuốn sách chất lượng tốt nhất với giá cả hợp lý.</p>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .success-icon {
        animation: bounceIn 0.6s ease-out;
    }
    
    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.3);
        }
        50% {
            opacity: 1;
            transform: scale(1.05);
        }
        70% {
            transform: scale(0.9);
        }
        100% {
            opacity: 1;
            transform: scale(1);
        }
    }
    
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .border {
        border-color: #e9ecef !important;
    }
</style>