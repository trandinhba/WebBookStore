@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var bestSellingBooks = ViewBag.BestSellingBooks as IEnumerable<WebBookStore.Models.Book>;
    var newBooks = ViewBag.NewBooks as IEnumerable<WebBookStore.Models.Book>;
}

@section Styles {
    <link href="~/Content/homepage.css" rel="stylesheet" />
}

<div class="homepage-container">
    <!-- Promotional Section -->
    <div class="main-content">
        <div class="container">
            <div class="promo-section">
                <div class="row g-4">
                    <div class="col-lg-8">
                        <div class="promo-main">
                            <h2>SALE EXAMPLE 2</h2>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="promo-side">
                            <div class="promo-card">
                                <h3>SALE EXAMPLE 3</h3>
                            </div>
                            <div class="promo-card">
                                <h3>SALE EXAMPLE 4</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Section -->
    <div class="product-section">
        <div class="container">
            <div class="section-banner">
                <h2>SẢN PHẨM BÁN CHẠY</h2>
            </div>
            
            <div class="product-grid">
                @if (bestSellingBooks != null && bestSellingBooks.Any())
                {
                    foreach (var book in bestSellingBooks.Take(4))
                    {
                        <div class="product-card">
                            <a href="@Url.Action("Details", "Books", new { id = book.BookId })">
                                <img class="product-image" src="@Url.Content(book.ImageUrl)" alt="@book.Title">
                            </a>
                            <div class="product-info">
                                <h3 class="product-title">
                                    <a href="@Url.Action("Details", "Books", new { id = book.BookId })">
                                        @book.Title
                                    </a>
                                </h3>
                                <div class="product-price">
                                    @if (book.DiscountPrice.HasValue && book.DiscountPrice < book.Price)
                                    {
                                        <span class="text-danger">@String.Format("{0:N0} ₫", book.DiscountPrice)</span>
                                        <span class="product-price original">@String.Format("{0:N0} ₫", book.Price)</span>
                                    }
                                    else
                                    {
                                        <span>@String.Format("{0:N0} ₫", book.Price)</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <!-- Default products if no data -->
                    <div class="product-card">
                        <img class="product-image" src="~/Content/images/sword-art-online-1.jpg" alt="Sword Art Online 001">
                        <div class="product-info">
                            <h3 class="product-title">Sword Art Online 001</h3>
                            <div class="product-price">150,000 ₫</div>
                        </div>
                    </div>
                    <div class="product-card">
                        <img class="product-image" src="~/Content/images/sword-art-online-5.jpg" alt="Sword Art Online 005">
                        <div class="product-info">
                            <h3 class="product-title">Sword Art Online 005</h3>
                            <div class="product-price">150,000 ₫</div>
                        </div>
                    </div>
                    <div class="product-card">
                        <img class="product-image" src="~/Content/images/jujutsu-kaisen.jpg" alt="Chú Thuật Lạt Thiên">
                        <div class="product-info">
                            <h3 class="product-title">Chú Thuật Lạt Thiên</h3>
                            <div class="product-price">120,000 ₫</div>
                        </div>
                    </div>
                    <div class="product-card">
                        <img class="product-image" src="~/Content/images/tokyo-revengers-4.jpg" alt="Tokyo Revengers 4">
                        <div class="product-info">
                            <h3 class="product-title">Tokyo Revengers 4</h3>
                            <div class="product-price">130,000 ₫</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>