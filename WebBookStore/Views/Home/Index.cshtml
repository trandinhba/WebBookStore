
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row g-3 mb-4">
    <div class="col-lg-8">
        <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner rounded-2 shadow-sm" style="height: 320px;">
                <div class="carousel-item active bg-light d-flex align-items-center justify-content-center">
                    <div class="display-6 fw-bold text-secondary">SALE EXAMPLE</div>
                </div>
                <div class="carousel-item bg-light d-flex align-items-center justify-content-center">
                    <div class="display-6 fw-bold text-secondary">SALE EXAMPLE</div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col-lg-4 d-grid gap-3">
        <div class="p-4 bg-light rounded-2 shadow-sm d-flex align-items-center justify-content-center fw-semibold text-secondary">SALE EXAMPLE</div>
        <div class="p-4 bg-light rounded-2 shadow-sm d-flex align-items-center justify-content-center fw-semibold text-secondary">SALE EXAMPLE</div>
    </div>
    <div class="col-12">
        <div class="carousel-indicators position-static mt-2 d-flex justify-content-center gap-2">
            <span class="indicator-dot active"></span>
            <span class="indicator-dot"></span>
            <span class="indicator-dot"></span>
            <span class="indicator-dot"></span>
        </div>
    </div>
    <hr class="mt-2"/>
</div>

<section class="mb-3">
    <div class="section-title">SẢN PHẨM BÁN CHẠY</div>
    <div class="row g-4 pt-3">
        @for (int i = 0; i < 8; i++)
        {
            <div class="col-6 col-sm-4 col-md-3 col-lg-3">
                <a class="card h-100 book-card text-decoration-none" href="#">
                    <img class="card-img-top object-fit-cover" style="height: 220px;" src="https://picsum.photos/seed/@i/400/600" alt="Book" />
                    <div class="card-body p-2">
                        <div class="book-title">Sword Art Online Progressive</div>
                        <div class="text-muted small">Tập @(i+1)</div>
                        <div class="fw-bold mt-1 text-dark">@String.Format("{0:N0} Đ", (i % 3 == 0 ? 120000 : (i % 3 == 1 ? 115000 : 100000)))</div>
                    </div>
                </a>
            </div>
        }
    </div>
</section>

@section scripts {
<script>
    // dots styling sync with Bootstrap indicators could be added later
</script>
}

