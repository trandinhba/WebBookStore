@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var bestSellingBooks = ViewBag.BestSellingBooks as IEnumerable<WebBookStore.Models.Book>;
    var newBooks = ViewBag.NewBooks as IEnumerable<WebBookStore.Models.Book>;
}

@section Styles {
    <link href="~/Content/homepage.css" rel="stylesheet" />
    <style>
        .banner-link {
            position: relative;
            display: block;
            text-decoration: none;
            color: inherit;
        }
        
        .banner-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(0,0,0,0.3), rgba(0,0,0,0.1));
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 20px;
        }
        
        .banner-overlay h2 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        
        .banner-overlay p {
            font-size: 1.2rem;
            margin-bottom: 20px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }
        
        .banner-overlay-small {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(0,0,0,0.4), rgba(0,0,0,0.2));
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 10px;
        }
        
        .banner-overlay-small h3 {
            font-size: 1.5rem;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        
        .promo-card {
            margin-bottom: 20px;
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }
        
        .promo-card:hover {
            transform: translateY(-5px);
        }
        
        .promo-main {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }
        
        .promo-main:hover {
            transform: translateY(-5px);
        }
    </style>
}

<div class="homepage-container">
    <!-- Promotional Section -->
    <div class="main-content">
        <div class="promo-section">
            <img src="/Content/images/banners/sale-sach-50.svg" alt="SALE SÁCH ƯU ĐÃI ĐẾN TỐI ĐA 50%" class="img-fluid" style="width: 100%; height: 400px; object-fit: cover; display: block;" />
        </div>
    </div>

    <!-- Product Section -->
    <div class="product-section">
        <div class="container">
            <div class="section-banner">
                <h2>SẢN PHẨM BÁN CHẠY</h2>
            </div>
            
            <div class="product-grid">
                @if (bestSellingBooks != null && bestSellingBooks.Any())
                {
                    foreach (var book in bestSellingBooks.Take(4))
                    {
                        <div class="product-card">
                            <a href="@Url.Action("Details", "Books", new { id = book.BookId })">
                                @if (!string.IsNullOrEmpty(book.ImageUrl))
                                {
                                    <img class="product-image" src="@Url.Content(book.ImageUrl)" alt="@book.Title" onerror="this.src='/Content/images/no-image.svg'">
                                }
                                else
                                {
                                    <img class="product-image" src="/Content/images/no-image.svg" alt="@book.Title">
                                }
                            </a>
                            <div class="product-info">
                                <h3 class="product-title">
                                    <a href="@Url.Action("Details", "Books", new { id = book.BookId })">
                                        @book.Title
                                    </a>
                                </h3>
                                <div class="product-price">
                                    @if (book.DiscountPrice.HasValue && book.DiscountPrice < book.Price)
                                    {
                                        <span class="text-danger">@String.Format("{0:N0} ₫", book.DiscountPrice)</span>
                                        <span class="product-price original">@String.Format("{0:N0} ₫", book.Price)</span>
                                    }
                                    else
                                    {
                                        <span>@String.Format("{0:N0} ₫", book.Price)</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <!-- Default products if no data -->
                    <div class="product-card">
                        <img class="product-image" src="~/Content/images/sword-art-online-1.jpg" alt="Sword Art Online 001">
                        <div class="product-info">
                            <h3 class="product-title">Sword Art Online 001</h3>
                            <div class="product-price">150,000 ₫</div>
                        </div>
                    </div>
                    <div class="product-card">
                        <img class="product-image" src="~/Content/images/sword-art-online-5.jpg" alt="Sword Art Online 005">
                        <div class="product-info">
                            <h3 class="product-title">Sword Art Online 005</h3>
                            <div class="product-price">150,000 ₫</div>
                        </div>
                    </div>
                    <div class="product-card">
                        <img class="product-image" src="~/Content/images/jujutsu-kaisen.jpg" alt="Chú Thuật Lạt Thiên">
                        <div class="product-info">
                            <h3 class="product-title">Chú Thuật Lạt Thiên</h3>
                            <div class="product-price">120,000 ₫</div>
                        </div>
                    </div>
                    <div class="product-card">
                        <img class="product-image" src="~/Content/images/tokyo-revengers-4.jpg" alt="Tokyo Revengers 4">
                        <div class="product-info">
                            <h3 class="product-title">Tokyo Revengers 4</h3>
                            <div class="product-price">130,000 ₫</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>