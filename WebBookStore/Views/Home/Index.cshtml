@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var bestSellingBooks = ViewBag.BestSellingBooks as IEnumerable<WebBookStore.Models.Book>;
    var newBooks = ViewBag.NewBooks as IEnumerable<WebBookStore.Models.Book>;
}

<div class="row g-3 mb-4">
    <div class="col-lg-8">
        <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner rounded-2 shadow-sm" style="height: 320px;">
                <div class="carousel-item active bg-light d-flex align-items-center justify-content-center">
                    <div class="display-6 fw-bold text-secondary">SALE EXAMPLE 1</div>
                </div>
                <div class="carousel-item bg-light d-flex align-items-center justify-content-center">
                    <div class="display-6 fw-bold text-secondary">SALE EXAMPLE 2</div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev"><span class="carousel-control-prev-icon" aria-hidden="true"></span></button>
            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next"><span class="carousel-control-next-icon" aria-hidden="true"></span></button>
        </div>
    </div>
    <div class="col-lg-4 d-grid gap-3">
        <div class="p-4 bg-light rounded-2 shadow-sm d-flex align-items-center justify-content-center fw-semibold text-secondary">SALE EXAMPLE 3</div>
        <div class="p-4 bg-light rounded-2 shadow-sm d-flex align-items-center justify-content-center fw-semibold text-secondary">SALE EXAMPLE 4</div>
    </div>
</div>

<hr class="mt-4" />

<section class="mb-5">
    <div class="section-title">SẢN PHẨM BÁN CHẠY</div>
    <div class="row g-3 pt-3">
        @if (bestSellingBooks != null && bestSellingBooks.Any())
        {
            foreach (var book in bestSellingBooks)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card h-100 book-card shadow-sm">
                        <a href="@Url.Action("Details", "Books", new { id = book.BookId })">
                            <img class="card-img-top" src="@Url.Content(book.ImageUrl)" alt="@book.Title">
                        </a>
                        <div class="card-body p-2 d-flex flex-column">
                            <h5 class="card-title book-title mb-1">
                                <a href="@Url.Action("Details", "Books", new { id = book.BookId })" class="text-decoration-none text-dark">
                                    @book.Title
                                </a>
                            </h5>
                            <div class="mt-auto">
                                @if (book.DiscountPrice.HasValue && book.DiscountPrice < book.Price)
                                {
                                    <span class="fw-bold text-danger me-2">@String.Format("{0:N0} ₫", book.DiscountPrice)</span>
                                    <span class="text-muted text-decoration-line-through small">@String.Format("{0:N0} ₫", book.Price)</span>
                                }
                                else
                                {
                                    <span class="fw-bold text-dark">@String.Format("{0:N0} ₫", book.Price)</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>

<section class="mb-3">
    <div class="section-title">SÁCH MỚI NHẤT</div>
    <div class="row g-3 pt-3">
        @if (newBooks != null && newBooks.Any())
        {
            foreach (var book in newBooks)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card h-100 book-card shadow-sm">
                        <a href="@Url.Action("Details", "Books", new { id = book.BookId })">
                            <img class="card-img-top" src="@Url.Content(book.ImageUrl)" alt="@book.Title">
                        </a>
                        <div class="card-body p-2 d-flex flex-column">
                            <h5 class="card-title book-title mb-1">
                                <a href="@Url.Action("Details", "Books", new { id = book.BookId })" class="text-decoration-none text-dark">
                                    @book.Title
                                </a>
                            </h5>
                            <div class="mt-auto">
                                @if (book.DiscountPrice.HasValue && book.DiscountPrice < book.Price)
                                {
                                    <span class="fw-bold text-danger me-2">@String.Format("{0:N0} ₫", book.DiscountPrice)</span>
                                    <span class="text-muted text-decoration-line-through small">@String.Format("{0:N0} ₫", book.Price)</span>
                                }
                                else
                                {
                                    <span class="fw-bold text-dark">@String.Format("{0:N0} ₫", book.Price)</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>